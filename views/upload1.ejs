    <% include partials/navbar1.ejs %>

    <div class="container">
        <form class="well form-horizontal" action=" " method="post" id="upload_form" enctype="multipart/form-data">
            <fieldset>

                <!-- Form Name -->
                <legend><strong>Upload your video</strong></legend>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4
                     control-label">Title</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="title" placeholder="Title" id="title" class="form-control" type="text">
                        </div>
                    </div>
                </div>




                <!-- Select Basic -->

                <div class="form-group">
                    <label class="col-md-4 control-label">genre</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <select name="genre" class="form-control selectpicker" id='genre'>
                                <option value=" ">Please select genre</option>
                                <option>Alabama</option>

                            </select>
                        </div>
                    </div>
                </div>

                <!-- radio checks -->
                <div class="form-group">
                    <label class="col-md-4 control-label">Make Private</label>
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="isPrivate" value="1" /> Yes
                            </label>
                            <label>
                                <input type="radio" name="isPrivate" value="0" /> No
                            </label>
                        </div>
                        <!-- <div class="radio">
                            
                        </div> -->
                    </div>
                </div>

                <!-- Text area -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Video Description</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            <input type="text" name="description" class="form-control" style="height : 100px"
                                id="description">
                            <!-- <textarea class="form-control" name="comment"
                                placeholder="Write Your description here..."></textarea> -->
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4
                        control-label">Title</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="file" name="video_upload" class="form-control" id="videoFile"><br>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4
                        control-label">Tags</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <div class="tags-container">
                                <input type="text" class="tag-box" placeholder="At max 10" />
                            </div>
                        </div>
                    </div>
                </div>

                <progress id="progressBar" value="0" max="100" style="width:300px;"></progress>
                <h3 id="status"></h3>
                <p id="loaded_n_total"></p>

                <!-- Success message -->
                <div class="alert alert-success" role="alert" id="success_message">Success <i
                        class="glyphicon glyphicon-thumbs-up"></i> Thanks for uploading video
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning"> <span class=" glyphicon glyphicon-send">
                                Upload</span></button>
                    </div>
                </div>
                <!-- <div class="tags-container">
                        <input type="text" class="tag-box" />
                    </div> -->

            </fieldset>
        </form>
        <form action="%PATH%" method="POST">

        </form>
    </div>
